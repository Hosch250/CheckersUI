<Button
    x:Class="CheckersUI.CustomControls.AppBarMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Name="Root"
    Height="40"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch">

    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding ElementName=Root, Path=Text, Mode=OneTime, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="{ThemeResource SymbolThemeFontFamily}" Text="&#xE017;" />
    </Grid>
</Button>
