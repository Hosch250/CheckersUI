<Page
    x:Class="CheckersUI.Pages.BoardEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CheckersUI.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
            <RowDefinition Height="600" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".8*" />
            <ColumnDefinition Width="600" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Image Source="../Assets/SteelTheme/WhiteChecker.png"
                       Width="80" />
                <TextBlock HorizontalAlignment="Center">White Checker</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Image Source="../Assets/SteelTheme/WhiteKing.png"
                       Width="80" />
                <TextBlock HorizontalAlignment="Center">White King</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Image Source="../Assets/SteelTheme/BlackChecker.png"
                       Width="80" />
                <TextBlock HorizontalAlignment="Center">Black Checker</TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="3">
                <Image Source="../Assets/SteelTheme/BlackKing.png"
                       Width="80" />
                <TextBlock HorizontalAlignment="Center">Black King</TextBlock>
            </StackPanel>
        </Grid>
        <Grid Width="600" 
              Height="600"
              Grid.Column="1"
              Grid.Row="1"
              VerticalAlignment="Top">
            <Image Source="../Assets/SteelTheme/Checkerboard.png"
                   Width="600" />
        </Grid>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,20,0,0">
            <TextBlock FontWeight="Bold" FontSize="15" VerticalAlignment="Center">FEN:</TextBlock>
            <TextBox Width="425" IsReadOnly="True" Margin="5,0,0,0" BorderThickness="1" AcceptsReturn="False" FontSize="5" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    Margin="10,0,0,0">
            <ComboBox Width="150"
                      Margin="0,0,0,10">
                <ComboBoxItem>Initial Position</ComboBoxItem>
                <ComboBoxItem>Empty</ComboBoxItem>
                <ComboBoxItem>FEN</ComboBoxItem>
            </ComboBox>
            <ComboBox Width="150">
                <ComboBoxItem>Black to play</ComboBoxItem>
                <ComboBoxItem>White to play</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
