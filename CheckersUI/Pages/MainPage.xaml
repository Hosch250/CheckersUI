<Page
    x:Class="CheckersUI.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CheckersUI.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:checkersUi="using:CheckersUI"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance checkersUi:MainPageViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Left">
            <HyperlinkButton Content="Game"
                             Command="{Binding GamePageNavigationCommand}"
                             CommandParameter="{Binding ElementName=Frame}" />
            <HyperlinkButton Content="Board Editor"
                             Command="{Binding BoardEditorNavigationCommand}"
                             CommandParameter="{Binding ElementName=Frame}" />
        </StackPanel>
        <Frame Name="Frame" Grid.Row="1" />
    </Grid>
</Page>
